<Window x:Class="HelloWorld.PanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWorld"
        mc:Ignorable="d"
        Title="PanelWindow" Height="300" Width="300">
    <Canvas>
        <Ellipse Canvas.Left="25" Canvas.Top="25" Width="200" Height="200" >
            <Ellipse.Fill>
                <LinearGradientBrush EndPoint="0.25,1" StartPoint="0,0.5">
                    <GradientStop Color="DarkGray" Offset="0"/>
                    <GradientStop Color="#FF130E0E" Offset="1"/>
                </LinearGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Rectangle Fill="LightCoral" Canvas.Left="50" Canvas.Top="50" Width="50" Height="50" />
        <Rectangle Fill="LightBlue" Canvas.Left="25" Canvas.Top="25" Width="50" Height="50" />
        <Rectangle Fill="LightCyan" Canvas.Left="75" Canvas.Top="75" Width="50" Height="50" />
    </Canvas>
</Window>
